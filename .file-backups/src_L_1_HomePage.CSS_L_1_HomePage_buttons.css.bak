/* Action Button Palette */


.form-panel-container15{
  display: flex;
  justify-content: space-evenly;
  width: 100%; /* Ensure full width */
  gap: var(--spacing-unit); /* Consistent spacing */
}

 .form-action-buttons button {
  font-weight: bold;
  padding: 40px;
  border: none;
  border-radius: 24px;
  cursor: pointer;
  transition: all 0.3s ease;
  min-width: 150px;
  position: relative;
  overflow: hidden;

}

/* Configuration Row */
 .form-action-buttons .config-row button {
  background-color: var(--primary-color);
  color: var(--button-text);
}

 .form-action-buttons .config-row button:hover {
  background-color: var(--primary-hover);
  transform: translateY(-2px);
  box-shadow: 0 2px 8px rgba(var(--primary-rgb), 0.3);
}

 .form-action-buttons .config-row button:focus {
  outline: none;
  box-shadow: 0 0 0 3px rgba(var(--primary-rgb), 0.4);
}

/* Visualization Row */
 .form-action-buttons .visualization-row button {
  background: var(--gradient-primary);
  color: var(--button-text);
}

 .form-action-buttons .visualization-row button:hover {
  background: var(--gradient-primary-hover);
  transform: translateY(-2px);
  box-shadow: 0 2px 8px rgba(var(--success-rgb), 0.3);
}

 .form-action-buttons .visualization-row button:focus {
  outline: none;
  box-shadow: 0 0 0 3px rgba(var(--success-rgb), 0.4);
}

/* Practical Row */
 .form-action-buttons .practical-row button {
  position: relative;
}

/* Run CFA Button */
 .form-action-buttons .practical-row button:nth-child(1) {
  background-color: var(--warning-color);
  color: var(--button-text);
}

 .form-action-buttons .practical-row button:nth-child(1):hover {
  background-color: var(--warning-hover);
  transform: translateY(-2px);
  box-shadow: 0 2px 8px rgba(var(--warning-rgb), 0.3);
}

 .form-action-buttons .practical-row button:nth-child(1):focus {
  outline: none;
  box-shadow: 0 0 0 3px rgba(var(--warning-rgb), 0.4);
}

/* Submit Complete Set Button */
 .form-action-buttons .practical-row button:nth-child(2) {
  background-color: var(--accent-1);
  color: var(--button-text);
}

 .form-action-buttons .practical-row button:nth-child(2):hover {
  background-color: var(--accent-1-hover);
  transform: translateY(-2px);
  box-shadow: 0 2px 8px rgba(var(--accent-1-rgb), 0.3);
}

 .form-action-buttons .practical-row button:nth-child(2):focus {
  outline: none;
  box-shadow: 0 0 0 3px rgba(var(--accent-1-rgb), 0.4);
}

/* Reset Button */
 .form-action-buttons .practical-row button:nth-child(3) {
  background-color: var(--accent-2);
  color: var(--button-text);
}

 .form-action-buttons .practical-row button:nth-child(3):hover {
  background-color: var(--accent-2-hover);
  transform: translateY(-2px);
  box-shadow: 0 2px 8px rgba(var(--accent-2-rgb), 0.3);
}

 .form-action-buttons .practical-row button:nth-child(3):focus {
  outline: none;
  box-shadow: 0 0 0 3px rgba(var(--accent-2-rgb), 0.4);
}

/* Batch Operation Buttons */
 .step-content button {
  margin: 0 10px;
  min-width: 180px;
}

/* Create New Batch Button */
 .step-content .primary-action {
  background-color: var(--danger-color);
  color: var(--button-text);
}

 .step-content .primary-action:hover {
  background-color: var(--danger-hover);
  transform: translateY(-2px);
  box-shadow: 0 2px 8px rgba(var(--danger-rgb), 0.3);
}

 .step-content .primary-action:focus {
  outline: none;
  box-shadow: 0 0 0 3px rgba(var(--danger-rgb), 0.4);
}

/* Remove Current Batch Button */
 .step-content .secondary-action {
  background-color: var(--secondary-color);
  color: var(--button-text);
}

 .step-content .secondary-action:hover {
  background-color: var(--secondary-hover);
  transform: translateY(-2px);
  box-shadow: 0 2px 8px rgba(var(--secondary-rgb), 0.3);
}

 .step-content .secondary-action:focus {
  outline: none;
  box-shadow: 0 0 0 3px rgba(var(--secondary-rgb), 0.4);
}

/* Disabled State */
 .form-action-buttons button:disabled,
 .step-content button:disabled {
  opacity: 0.7;
  cursor: not-allowed;
  transform: none;
  box-shadow: none;
}

/* Loading Animation for Run CFA */
@keyframes pulse {
  0% { opacity: 1; }
  50% { opacity: 0.6; }
  100% { opacity: 1; }
}

 .form-action-buttons .practical-row button:nth-child(1)[disabled] {
  animation: pulse 1.5s infinite;
}
.tooltip1 {
  position: relative;
  display: inline-block;
  border-bottom: 1px dotted black;
  visibility: hidden;
}
